datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Provider {
  google
  github
  email
}

enum Roles {
  admin
  level_0
  level_1
  level_2
  level_3
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String?
  provider  Provider @default(google)
  createdAt DateTime @default(now())
  role      Roles?
  active    Boolean  @default(true)
  image     String?
}

model Customer {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String?  @unique
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  order     Order[]
  active   Boolean  @default(true)
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  price       Float
  image       String?
  stock       Int
  description String?
  catagory    String
  createdAt   DateTime @default(now())
  active      Boolean  @default(true)
}

model Order {
  id         String         @id @default(auto()) @map("_id") @db.ObjectId
  total      Float
  status     String
  createdAt  DateTime       @default(now())
  Customer   Customer?      @relation(fields: [customerId], references: [id])
  customerId String?        @db.ObjectId
  products   AddedProduct[]
}

type AddedProduct {
  id       String @db.ObjectId
  quantity Int
}
