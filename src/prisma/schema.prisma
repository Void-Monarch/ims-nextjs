datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Provider {
  google
  github
  email
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String     @unique
  password  String?
  provider  Provider   @default(google)
  createdAt DateTime   @default(now())
  customer  Customer[]
  Store     Store[]
}

model Customer {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String?  @unique
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?  @db.ObjectId
  order     Order[]
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  price       Float
  image       String?
  stock       Int
  description String?
  catagory    String
  createdAt   DateTime @default(now())
  Store       Store    @relation(fields: [storeId], references: [id])
  storeId     String   @db.ObjectId
}

model Order {
  id         String         @id @default(auto()) @map("_id") @db.ObjectId
  total      Float
  status     String
  createdAt  DateTime       @default(now())
  Customer   Customer?      @relation(fields: [customerId], references: [id])
  customerId String?        @db.ObjectId
  Store      Store          @relation(fields: [storeId], references: [id])
  storeId    String         @db.ObjectId
  products   AddedProduct[]
}

type AddedProduct {
  id       String @db.ObjectId
  quantity Int
}

model Store {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String?   @unique
  phone       String?
  address     String?
  gstin       String?   @unique
  description String?
  createdAt   DateTime  @default(now())
  User        User?     @relation(fields: [userId], references: [id])
  userId      String?   @db.ObjectId
  Order       Order[]
  Product     Product[]
}
